<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneFragment"
    android:background="#fccc2d">

    <TextView
        android:id="@+id/mv"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="173dp"
        android:background="#f07e0d"
        android:focusable="false"
        android:fontFamily="serif"
        android:text="       Movie"
        android:textSize="28dp" />

    <EditText

        android:id="@+id/mvname"
        android:layout_width="296dp"
        android:layout_height="52dp"
        android:layout_centerInParent="true"
        android:background="@drawable/edittextfile"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="TRY YOUR NAME"
        android:inputType="text"
        android:textSize="25dp" />


    <Button
        android:id="@+id/mvbtn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="193dp"
        android:background="#b7df53"
        android:text="Check it"
        />

    <TextView
        android:id="@+id/percent"
        android:layout_width="87dp"
        android:layout_height="71dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:background="#ff8c2d"
        android:textAlignment="center"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/movs" />

    <Button
        android:id="@+id/topercent"
        android:layout_width="65dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"

        android:drawableTop="@drawable/icon"
        android:textSize="30dp" />


</RelativeLayout>